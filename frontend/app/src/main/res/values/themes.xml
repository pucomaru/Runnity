<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Runnity" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- 스플래시 스크린 테마 -->
    <style name="Theme.Runnity.Splash" parent="Theme.SplashScreen">
        <!-- 스플래시 배경색 -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <!-- 스플래시 아이콘 -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- 스플래시 지속 시간 (밀리초) -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- 스플래시 종료 후 적용할 테마 -->
        <item name="postSplashScreenTheme">@style/Theme.Runnity</item>
    </style>
</resources>