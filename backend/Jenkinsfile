pipeline {
  agent any

  environment {
    DOCKERHUB_USERNAME = 'daum0604'
    IMAGE = "docker.io/${DOCKERHUB_USERNAME}/runnity-stream"
  }

  options { disableConcurrentBuilds(); timestamps() }
 
  stages {
    stage('Checkout') {
      steps {
        checkout scm
        script {
          env.TAG = sh(returnStdout: true, script: "git rev-parse --short=7 HEAD").trim()
          if (!env.TAG) { env.TAG = 'manual' }
          echo "Using TAG: ${env.TAG}"
        }
      }
    }

    stage('Docker Build & Push') {
      steps {
        dir('stream') {
          sh "pwd && ls -al"
          withCredentials([string(credentialsId: 'dockerhub_token', variable: 'DOCKERHUB_TOKEN')]) {
            sh """
              set -euxo pipefail
              echo "\$DOCKERHUB_TOKEN" | docker login -u ${DOCKERHUB_USERNAME} --password-stdin
              docker build -t ${IMAGE}:${env.TAG} -t ${IMAGE}:latest -f Dockerfile .
              docker push ${IMAGE}:${env.TAG}
              docker push ${IMAGE}:latest
              docker logout || true
            """
          }
        }
      }
    }

    stage('Bundle compose') {
      steps {
        dir('stream') {
          sh """
            set -euxo pipefail
            mkdir -p deploy_bundle
            # stream/docker-compose.yml 은 아래처럼 이미지/태그를 사용하도록 작성되어 있어야 함:
            #   image: docker.io/${DOCKERHUB_USERNAME}/runnity-stream:\${TAG}
            cp -f docker-compose.yml deploy_bundle/
            [ -f .env ] && cp -f .env deploy_bundle/ || true
            tar czf deploy_bundle.tgz -C deploy_bundle .
            ls -al deploy_bundle
          """
        }
        archiveArtifacts artifacts: 'stream/deploy_bundle.tgz', fingerprint: true, onlyIfSuccessful: true
      }
    }

    stage('Deploy to server 43.203.250.119') {
      steps {
        // Jenkins Credentials 에 등록된 SSH 키의 ID 사용 (예: 'ubuntu')
        sshagent (credentials: ['ubuntu']) {
          withCredentials([string(credentialsId: 'dockerhub_token', variable: 'DOCKERHUB_TOKEN')]) {
            sh """
              set -euxo pipefail
              test -f stream/deploy_bundle.tgz

              ssh -o StrictHostKeyChecking=no ubuntu@43.203.250.119 'set -eux; mkdir -p ~/app'
              scp -o StrictHostKeyChecking=no stream/deploy_bundle.tgz ubuntu@43.203.250.119:~/app/

              ssh -o StrictHostKeyChecking=no ubuntu@43.203.250.119 "set -euxo pipefail; \
                cd ~/app; ls -al; \
                tar xzf deploy_bundle.tgz; \
                test -f docker-compose.yml; \
                echo '\$DOCKERHUB_TOKEN' | docker login -u ${DOCKERHUB_USERNAME} --password-stdin; \
                TAG=${env.TAG} docker compose pull; \
                TAG=${env.TAG} docker compose up -d; \
                docker logout || true; \
                docker image prune -f || true; \
                docker compose ps"
            """
          }
        }
      }
    }
  }
}
